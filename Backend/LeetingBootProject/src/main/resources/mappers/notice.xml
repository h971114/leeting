<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">
	<!-- 공지사항 등록 -->
	<insert id="writeNotice" parameterType="notice">
		INSERT INTO notice ( title, detail, writer, hit)
		VALUES ( #{title},  #{detail}, #{writer}, 0)
	</insert>
	<update id="putImage" parameterType="map">
		UPDATE notice SET file1=#{file1},file2=#{file2},file3=#{file3} WHERE title=#{title}
	</update>
	<!-- 공지사항 목록 -->
	<select id="listNotice" resultType="notice">
		SELECT * FROM notice ORDER BY no DESC
	</select>
	<!-- 공지사항 상세정보 -->
	<select id="noticeinfo" parameterType="int" resultType="notice">
		SELECT * FROM notice WHERE no = #{noticeno}
	</select>
	<update id="noticehit" parameterType="int">
			UPDATE notice SET hit=hit+1 WHERE no = #{noticeno}
	</update>
	<!-- 공지사항 수정 -->
	<update id="noticemodify" parameterType="notice">
		UPDATE notice SET title=#{title},detail=#{detail},date=now() WHERE no=#{no};
	</update>
	<update id="noticefilemodify" parameterType="map">
		UPDATE notice SET file1=#{file1},file2=#{file2},file3=#{file3} WHERE no=#{no};
	</update>
	<!-- 공지사항 삭제 -->
	<delete id="noticeldelete" parameterType="int">
		DELETE FROM notice WHERE no=#{noticeno} 
	</delete>
	<select id="getByteImage" resultType="java.util.Map">
    SELECT file1
    FROM notice where no = 13;
</select>
</mapper>